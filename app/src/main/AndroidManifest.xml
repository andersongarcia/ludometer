<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ifspsaocarlos.sdm.ludometer" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_ludometer"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".activities.timers.ChessClockActivity" >
        </activity>
        <activity android:name=".activities.timers.TimerActivity" >
        </activity>
        <activity android:name=".activities.raffles.DiceActivity" >
        </activity>
        <activity android:name=".activities.raffles.DiceSetActivity" >
        </activity>
        <activity android:name=".activities.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.raffles.DiceSetConfigActivity" >
        </activity>
        <activity android:name=".activities.timers.ChessClockConfigActivity" >
        </activity>
        <activity android:name=".activities.raffles.DiceConfigActivity" >
        </activity>
    </application>

</manifest>
